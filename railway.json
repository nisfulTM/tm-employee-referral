{
  "$schema": "https://railway.app/railway.schema.json",
  "services": [
    {
      "name": "backend",
      "builder": "dockerfile",
      "dockerfilePath": "./app-backend/Dockerfile",
      "dockerContext": "./app-backend",
      "startCommand": "gunicorn job_referral_backend.wsgi:application --bind 0.0.0.0:$PORT"
    },
    {
      "name": "frontend",
      "builder": "dockerfile",
      "dockerfilePath": "./job-referral-frontend/Dockerfile",
      "dockerContext": "./job-referral-frontend"
    }
  ]
}
